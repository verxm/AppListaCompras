<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llcLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp">



    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/llcItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ITEM:"
            style="@style/labels"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/llcQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Quantidade:"
            style="@style/labels"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X "
            style="@style/labels"/>

        <TextView
            android:id="@+id/llctvPrecoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="preco"
            style="@style/labels"/>


    </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_alert"
            android:tint="@color/red"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/llcAlerta"
            android:visibility="gone"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$0,00"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                style="@style/labels"
                android:id="@+id/llctvSubtotal"
                />


            <Button
                android:id="@+id/llcBtnExcluir"
                android:layout_width="52dp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28sp"
                android:background="@android:drawable/ic_menu_delete"
                android:backgroundTint="@android:color/holo_red_dark" />




        </FrameLayout>

    </LinearLayout>

</LinearLayout>