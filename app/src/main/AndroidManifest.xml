<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projeto.applistacompras">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_lista_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.ListasActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.NovaListaActivity"
            android:label="@string/title_activity_nova_lista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ComprasIdeiaActivity"
            android:label="@string/title_activity_compras_ideia"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>